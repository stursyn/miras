<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="kz.satpaev.sunkar.controllers.SalesController"
            stylesheets="@../css/fullpackstyling.css"
            maxWidth="1200" maxHeight="1000">
    <top>
        <VBox>
        <HBox alignment="CENTER_RIGHT"
              spacing="10"
              styleClass="cancel-button-h-box">
            <Label fx:id="title" styleClass="add-label"/>
            <Region HBox.hgrow="ALWAYS" /> <!-- пустое пространство слева -->

            <!-- Кнопка закрыть -->
            <Button fx:id="cancelButton" text="✕" styleClass="cancel-button-btn" />
        </HBox>
        <GridPane hgap="5" vgap="5" style="-fx-padding: 12; -fx-background-color: #F5F7FA;">
            <columnConstraints>
                <ColumnConstraints prefWidth="200" halignment="CENTER"/>
                <ColumnConstraints prefWidth="200" halignment="CENTER"/>
                <ColumnConstraints prefWidth="200" halignment="CENTER"/>
                <ColumnConstraints prefWidth="200" halignment="CENTER"/>
                <ColumnConstraints prefWidth="200" halignment="CENTER"/>
                <ColumnConstraints prefWidth="200" halignment="CENTER"/>
            </columnConstraints>
            <!-- Card 1 — Total Sales -->
            <VBox spacing="4" styleClass="card" GridPane.rowIndex="0" GridPane.columnIndex="0" maxWidth="Infinity" maxHeight="Infinity" >
                <Label text="Общая сумма продаж" styleClass="card-title" wrapText="true"/>
                <Label fx:id="totalAmount" text="0.0 тг." styleClass="card-value"/>
                <Label fx:id="totalAmountNote" styleClass="card-note"/>
            </VBox>

            <!-- Card 3 — Avg Receipt -->
            <VBox spacing="4" styleClass="card" GridPane.rowIndex="0" GridPane.columnIndex="1" maxWidth="Infinity" maxHeight="Infinity" >
                <Label text="Средний чек" styleClass="card-title"/>
                <Label fx:id="avgReceipt" text="0.0 тг." styleClass="card-value"/>
            </VBox>

            <!-- Row 2 -->
            <VBox spacing="4" styleClass="card" GridPane.rowIndex="0" GridPane.columnIndex="2" maxWidth="Infinity" maxHeight="Infinity" >
                <Label text="Наличные платежи" styleClass="card-title"/>
                <Label fx:id="cash" text="0.0 тг." styleClass="card-value"/>
            </VBox>

            <VBox spacing="4" styleClass="card" GridPane.rowIndex="0" GridPane.columnIndex="3" maxWidth="Infinity" maxHeight="Infinity" >
                <Label text="Kaspi" styleClass="card-title"/>
                <Label fx:id="kaspi" text="0.0 тг." styleClass="card-value"/>
            </VBox>

            <VBox spacing="4" styleClass="card" GridPane.rowIndex="0" GridPane.columnIndex="4" maxWidth="Infinity" maxHeight="Infinity" >
                <Label text="Halyk" styleClass="card-title"/>
                <Label fx:id="halyk" text="0.0 тг." styleClass="card-value"/>
            </VBox>

            <VBox spacing="4" styleClass="card" GridPane.rowIndex="0" GridPane.columnIndex="5" maxWidth="Infinity" maxHeight="Infinity" >
                <Label text="Долг" styleClass="card-title"/>
                <Label fx:id="duty" text="0.0 тг." styleClass="card-value"/>
            </VBox>
        </GridPane>
        </VBox>
    </top>
    <center>
        <VBox maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS">
            <padding>
                <Insets right="10" left="10"/>
            </padding>
            <TableView fx:id="salesTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="id" text="ИД" style="-fx-alignment: CENTER_LEFT"/>
                    <TableColumn fx:id="saleTime" text="Время продажи"  style="-fx-alignment: CENTER_LEFT"/>
                    <TableColumn fx:id="saleAmount" text="Сумма продажи"  style="-fx-alignment: CENTER_RIGHT"/>
                    <TableColumn fx:id="paymentType" text="Тип оплаты" style="-fx-alignment: CENTER_RIGHT"/>
                    <TableColumn fx:id="operation" text="Операции" style="-fx-alignment: CENTER"/>
                </columns>
            </TableView>
        </VBox>
        <Pagination fx:id="pagination" prefHeight="40"/>
    </center>
</BorderPane>