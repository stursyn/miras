<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
            fx:controller="kz.satpaev.sunkar.controllers.WeightedItemController"
            stylesheets="@../css/fullpackstyling.css"
            maxWidth="800.0" maxHeight="500">
    <top>
        <HBox alignment="CENTER_RIGHT"
              spacing="10"
              styleClass="cancel-button-h-box">

            <Label text="Детали товара" styleClass="add-label"/>
            <Region HBox.hgrow="ALWAYS" /> <!-- пустое пространство слева -->

            <!-- Кнопка закрыть -->
            <Button fx:id="cancelButton" text="✕" styleClass="cancel-button-btn" />
        </HBox>
    </top>
    <center>
        <GridPane styleClass="add-grid"
                  hgap="10" vgap="10" >
            <padding>
                <Insets top="10" right="10" left="10" bottom="10"/>
            </padding>

            <Label text="Штрих-код для поиска:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="add-label"/>
            <TextField fx:id="barcode" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2"
                       GridPane.hgrow="ALWAYS" maxWidth="Infinity" />

            <Label text="Наименование:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="add-label" />
            <Label fx:id="name" styleClass="add-label" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" maxWidth="Infinity"  GridPane.columnSpan="2"  />

            <Label text="Вес:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="add-label" />
            <TextField fx:id="weight" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity"  GridPane.columnSpan="2"  />

            <Label text="Цена продажи:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="add-label" />
            <TextField fx:id="sellPrice" GridPane.rowIndex="3" GridPane.columnIndex="1" maxWidth="Infinity"  GridPane.columnSpan="2" />

            <Button onAction="#saveAndPrint" text="Сохранить и pаспечатать штрих-код" styleClass="add-button" GridPane.rowIndex="4" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS"  maxWidth="Infinity" />
        </GridPane>
    </center>
    <bottom>
        <VBox fx:id="keyboard"/>
    </bottom>
</BorderPane>