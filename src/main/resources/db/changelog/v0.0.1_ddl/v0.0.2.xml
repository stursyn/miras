<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet author="seiit" id="import data">
        <sqlFile path="db/changelog/v0.0.1_ddl/data_sql_2.sql"/>
    </changeSet>
    <changeSet author="seiit" id="insert universal product">
        <insert tableName="item">
            <column name="barcode">UniversalProduct</column>
            <column name="name">Универсальный продукт</column>
            <column name="sell_price">0</column>
            <column name="current_quantity">0</column>
            <column name="can_have_sub_items">true</column>
        </insert>
    </changeSet>
    <changeSet author="seiit" id="migrate total amount by type">
        <sql>
            update sale set kaspi_amount = case when payment_type = 'KASPI' then amount else 0 end,
                            cash_amount = case when payment_type = 'CASH' then amount else 0 end,
                            halyk_amount = case when payment_type = 'HALYK' then amount else 0 end,
                            duty_amount = case when payment_type = 'DUTY' then amount else 0 end;
        </sql>
    </changeSet>
</databaseChangeLog>